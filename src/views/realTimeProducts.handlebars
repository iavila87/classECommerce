<div class="container-fluid">
    
    <div class="row">
        <div class="col-6">
            <h1>Productos por WebSocket</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-9">
            {{#if emptyProducts}}
                <p>No hay productos en el inventario</p>
            {{else}}
                <table class="table table-striped" id="tablaProductos"></table>
            {{/if}}
        </div>
        <div class="col-3">
            <div>
                <form class="d-flex flex-column mb-3 p-2 border rounded" id="formCreateProduct" action="" method="post">
                    <p class="mb-1">Codigo:</p>
                    <input type="text" name="txtCodigo" id="txtCodigo">
                    <p class="mb-1">Titulo:</p>
                    <input type="text" name="txtTitulo" id="txtTitulo">
                    <p class="mb-1">Descripcion:</p>
                    <input type="text" name="txtDescripcion" id="txtDescripcion">
                    <p class="mb-1">Precio:</p>
                    <input type="text" name="txtPrecio" id="txtPrecio">
                    <p class="mb-1">Stock:</p>
                    <input type="text" name="txtStock" id="txtStock">
                    <p class="mb-1">Categoria:</p>
                    <input type="text" name="txtCategoria" id="txtCategoria">
                    <input class="mt-2" type="submit" value="Crear Producto">
                </form>
            </div>
            <div>
                <form class="d-flex flex-column mt-3 p-2 border rounded" id="formDeleteProduct" action="" method="post">
                    <p class="mb-1">ID Producto:</p>
                    <input type="text" name="txtIdProducto" id="txtIdProducto">
                    <input class="mt-2" type="submit" value="Eliminar Producto">
                </form>
            </div>
        </div>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src='/js/realTimeProducts.js'></script>