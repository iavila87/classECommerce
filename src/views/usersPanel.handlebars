<div class="container">
    <h1>users</h1>

    <div class="row">
        <div class="col-4">
            <button class="btn btn-success" onclick="deleteInactiveUsers()">Limpiar Ususarios Inactivos</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#if emptyProducts}}
                <p>No hay productos en el inventario</p>
            {{else}}
                <table class="table table-striped">
                    <tr>
                        <td></td>
                        <td>Nombre</td>
                        <td>Email</td>
                        <td>Rol</td>
                        <td>Ultima Conexion</td>
                    </tr>
                    {{#each allUsersDTO}}
                    <tr>
                        <td><button class="btn btn-success" onclick="addProductToCart( '{{this._id}}','{{../user.cart}}')">Agregar</button></td>
                        <td>{{this.first_name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.role}}</td>
                        <td>{{this.last_connection}}</td>
                    </tr>
                    {{/each}}
                </table>
            {{/if}}
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src='/js/usersPanel.js'></script>