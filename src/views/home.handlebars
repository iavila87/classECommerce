<div class="container">
        
    <div class="row">
        <div class="col-6">
            <h1>Productos</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {{#if emptyProducts}}
                <p>No hay productos en el inventario</p>
            {{else}}
                <table class="table table-striped">
                    <tr>
                        <td>Codigo</td>
                        <td>Nombre</td>
                        <td>Descripcion</td>
                        <td>Precio</td>
                        <td>Cantidad</td>
                        <td>Categoria</td>
                        <td>Imagenes</td>
                    </tr>
                    {{#each products}}
                    <tr>
                        <td>{{this.code}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.thumbnails.[0]}}</td>
                    </tr>
                    {{/each}}
                </table>
            {{/if}}
        </div>
    </div>
    
</div>